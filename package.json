{
  "name": "creditdigital-widget",
  "version": "0.0.10",
  "description": "JS widget to be used on product listing and checkout pages for websites using CreditDigital",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "build": "parcel build src/index.js",
    "format": "prettier \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run typecheck && npm test && npm run lint",
    "preversion": "npm run lint",
    "start": "parcel watch src/index.js & serve",
    "typecheck": "tsc --noEmit --lib es2015,dom src/**/*.ts",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "creditdigital",
    "widget",
    "finance"
  ],
  "author": {
    "name": "Pericles Theodorou",
    "email": "periclestheo@gmail.com",
    "url": "https://www.periclestheo.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CreditDigital/widget"
  },
  "engines": {
    "node": ">= 10.15",
    "npm": ">= 6.4"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^12.7.2",
    "jest": "^24.8.0",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  },
  "dependencies": {}
}
